{
	"apiVersion": 2,
	"name": "surecart/address",
	"title": "Address",
	"description": "Display a shipping address form. This is used for shipping and tax calculations.",
	"category": "surecart",
	"keywords": ["address", "shipping", "tax"],
	"textdomain": "surecart",
	"ancestor": ["surecart/form"],
	"supports": {
		"reusable": false,
		"html": false,
		"className": false
	},
	"attributes": {
		"label": {
			"type": "string",
			"default": "Shipping Address"
		},
		"billing_label": {
			"type": "string",
			"default": "Billing Address"
		},
		"billing_toggle_label": {
			"type": "string",
			"default": "Billing address is same as shipping"
		},
		"required": {
			"type": "boolean",
			"default": true
		},
		"full": {
			"type": "boolean",
			"default": true
		},
		"line_2": {
			"type": "boolean",
			"default": false
		},
		"show_name": {
			"type": "boolean",
			"default": false
		},
		"default_country": {
			"type": "string"
		},
		"collect_billing": {
			"type": "boolean",
			"default": true
		}
	}
}
